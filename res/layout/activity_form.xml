            <Button
                android:id="@+id/bDone"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0"
                android:textSize="@dimen/text_size"
                android:text="Done" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
