<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/sfz" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/read_sfz"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="读二代证" />

        <Button
            android:id="@+id/read_third_sfz"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="读三代证" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/read_module"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="读取模块号" />

        <Button
            android:id="@+id/read_id"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="读卡号" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/sequential_read"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="连续读取" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/stop"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="停止" />

        <Button
            android:id="@+id/clear_sfz"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="清空" />
    </LinearLayout>

    <TextView
        android:id="@+id/module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/resultInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>